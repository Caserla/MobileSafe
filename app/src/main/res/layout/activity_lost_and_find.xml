<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
       style="@style/TitleStyle"
        android:text="手机防盗"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">
        <TextView
            android:text="安全号码"

            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
          style="@style/ContentStyle"
           />
        <TextView
            android:id="@+id/tv_safe_home"
            android:text="110"
            android:textColor="#000"
            android:textSize="20sp"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <ImageView

        android:layout_margin="5dp"
        android:src="@drawable/listview_divider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       >
        <TextView
            android:layout_marginLeft="15dp"
            android:text="防盗保护是否开启"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            style="@style/ContentStyle"
            />
        <ImageView
                 android:id="@+id/iv_lock"
                android:src="@drawable/unlock"
            android:layout_marginRight="10dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <ImageView

         android:layout_margin="5dp"
        android:src="@drawable/listview_divider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:text="重新进入设置向导"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/txt_shape_selector"
        android:onClick="reSetup"
        style="@style/ContentStyle"
       android:paddingBottom="5dp"
        />
    <ImageView

        android:layout_margin="5dp"
        android:src="@drawable/listview_divider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        style="@style/ContentStyle"
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#5000"
        android:layout_marginLeft="0dp"
        android:text="功能简介"/>

    <TextView
        android:drawableLeft="@drawable/star_big_on"
        style="@style/ContentStyle"
        android:gravity="center"
        android:text="GPS追踪:#*location*#"
        />
    <TextView
        android:drawableLeft="@drawable/star_big_on"
        style="@style/ContentStyle"
        android:gravity="center"
        android:text="播放报警音乐:#*alarm*#"
        />
    <TextView
        android:drawableLeft="@drawable/star_big_on"
        style="@style/ContentStyle"
        android:gravity="center"
        android:text="远程删除数据:#*wipedata*#"
        />
    <TextView
        android:drawableLeft="@drawable/star_big_on"
        style="@style/ContentStyle"
        android:gravity="center"
        android:text="远程锁屏:#*lockscreen*#"
        />

</LinearLayout>